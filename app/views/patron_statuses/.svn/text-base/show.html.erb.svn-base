<% if @patron_status.code? %>
<p>
  <b>Code:</b>
  <%=h @patron_status.code %>
</p>
<% end %>
<% if @patron_status.original_text? %>
<p>
  <b>Original text:</b>
  <%=h @patron_status.original_text %>
</p>
<% end %>
<% if @patron_status.web_text? %>
<p>
  <b>Web text:</b>
  <%=h @patron_status.web_text %>
</p>
<% end %>
<% if @patron_status.keywords? %>
<p>
  <b>Keywords:</b>
  <%=h @patron_status.keywords %>
</p>
<% end %>
<% if @patron_status.description? %>
<p>
  <b>Description:</b>
  <%=h @patron_status.description %>
</p>
<% end %>
<% if @patron_status.under_header? %>
<p>
  <b>Grouping:</b>
  <%=h @patron_status.under_header %>
</p>
<% end %>
<% if @patron_status.id_type? %>
<p>
  <b>ID Type:</b>
  <%=h @patron_status.id_type %>
</p>
<% end %>
<p>
  <b>From Aleph?</b>
  <%=h @patron_status.fromAleph %>
</p>
<p>
  <b>Permissions by Sub Library:</b><br />
	<select id="sublibrary_code">
	<option value="">Select sub library</option>
	<% @sublibraries.each do |s| 
	if s.web_text.empty?
	  webtext = s.code
	else
	  webtext = s.web_text
	end
	%>
	<option value="<%=s.code%>"><%=webtext%></option>
	<% end %>
	</select>
	<%= observe_field "sublibrary_code", :update => "sublibrary_chart", :with =>
	"sublibrary_code", :url => { :controller => "patron_statuses", :action => "get_sublibrary_permissions", :id => @patron_status.id }%>
  </p>
  <div id="sublibrary_chart">
  </div>

<br />
<%= link_to 'Edit', edit_patron_status_path(@patron_status), :class=>"nyulibrary_icons_wrench"%>
|
<%= link_to 'Back', patron_statuses_path %>
