<h1>Listing patron statuses</h1>

<%= form_tag patron_statuses_path, :class => "form-inline clearfix", :method => :get do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <div class="input-append pull-left">
    <label for="q" class="hide-text">Search...</label>
    <input class="search_q q" id="q" name="q" placeholder="Search..." type="text">
    <button type="submit" class="btn btn-primary search-btn" id="search">
    <span class="submit-search-text">Search</span>
      <i class="icon-search icon-white"></i>
    </button>
  </div>
<% end %>

<div id="patron_statuses">
<%= render "patron_statuses" %>
</div>

<br />

<%= icon_tag :add %><%= link_to 'New patron status', new_patron_status_path %>
