<h1>Listing patron statuses</h1>

<%= form_tag patron_statuses_path, :class => "form-inline clearfix", :method => :get do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    <label for="q" class="sr-only">Search...</label>
    <input class="search_q q form-control" id="q" name="q" placeholder="Search..." type="text">
    <input type="submit" class="btn btn-primary search-btn" id="search" value="Search" />
  </p>
<% end %>

<div id="patron_statuses">
<%= render "patron_statuses" %>
</div>

<br />

<%= icon_tag :add %><%= link_to 'New patron status', new_patron_status_path %>
