
<p>
  <b>Code:</b>
  <%=h @permission.code %>
</p>

<p>
  <b>Web text:</b>
  <%=h @permission.web_text %>
</p>

<p>
  <b>From Aleph?</b>
  <%=h @permission.fromAleph %>
</p>

<p>
<b>Permission Values:</b><br />
<table>
  <thead>
  <tr>
	<th>Code</th>
	<th>Web text</th>
	<th>From Aleph?</th>
  </tr>
  </thead>
  <tbody>
  <% @permission_values.each do |pv| %>
  <tr class="<%=cycle("even","odd") %>">
	<td><%= pv.code %></td>
	<td><%= pv.web_text %></td>
	<td><%= pv.fromAleph %></td>
	<!--td><%= link_to 'Show', pv %></td-->
	<td><%= link_to 'Edit', edit_permission_value_path(pv) %></td>
	<td><% if pv.fromAleph?%><span class="grayed"><% end %><%= link_to_unless(pv.fromAleph?, 'Destroy', pv, :confirm => 'Are you sure?', :method => :delete) %><% if pv.fromAleph? %></span><% end %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</p>
<% if !@permission.fromAleph? %>
	<% form_for [@permission, @permission_value] do |f| %>
	<%= f.error_messages %>
	<p>
		<b class="nyulibrary_icons_add">Add Permission Value:</b><br />
		<table class="noborder">
			<thead>
  			<tr>
        		<th>Code</th>
        		<th>Web text</th>
  			</tr>
			</thead>
			<tbody>
  			<tr>
        		<td><span class="grayed">nyu_ag_noaleph_</span> <%= f.text_field :code %></td>
        		<td><%= f.text_field :web_text %><%= f.hidden_field :prefix, :value => "nyu_ag_noaleph_"%><%= f.hidden_field :permission_code, :value => @permission.code%><%= f.hidden_field :fromAleph, :value => 0%></td>
        		<td><%= f.submit 'add' %></td>
  			</tr>
			</tbody>
		</table>
	</p>
	<% end %>
<% end %>
<br />
<%= link_to 'Edit', edit_permission_path(@permission), :class => "nyulibrary_icons_wrench" %> |
<%= link_to 'Back', permissions_path %>
