<h1>New permission</h1>

<% form_for(@permission) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <span class="grayed">nyu_ag_noaleph_</span> <%= f.text_field :code %><br />
<!--span class="grayed">
Note: Prefix appended to avoid overwriting this local permission <br />with a new Aleph permission with the same code.
</span-->
  </p>
  <p>
    <%= f.label :web_text %><br />
    <%= f.text_field :web_text %>
  </p>
    <%= f.hidden_field :fromAleph, :value => 0 %>
    <%= f.hidden_field :prefix, :value => "nyu_ag_noaleph_" %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', permissions_path %>
