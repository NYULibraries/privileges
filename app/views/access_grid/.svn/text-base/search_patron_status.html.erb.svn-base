<h1><%= get_formatted_detail('page_title')%></h1>

<h2><%= get_formatted_detail('searchbox_header')%></h2>

	<%= render :partial => "access_grid/search_box"  %>
	<div style="clear:both;"></div>
	<br />
	<h2>Showing <%=@patron_results.size.to_i%> results...</h2>
	<div style="width: 100%;">
	<table class="noborder frontend_table" style="width: 100%;">
	<thead>
		<th>Patron type</th>
	</thead>
	<tbody>
<% 
#This just prints a list of resultant patron results
#No pagination
i = 0
@patron_results.each do |p|
%>
	<tr class="<%=cycle("even","odd") %>">
		<td><%= link_to(p.web_text, "#{$APP_ROOT}patrons/#{p.id}-#{normalize_text(p.web_text)}")%></td>
	</tr>
<% 
i+=1
end 
%>
	</tbody>
</table>
</div>
<div style="clear:both;"></div>
