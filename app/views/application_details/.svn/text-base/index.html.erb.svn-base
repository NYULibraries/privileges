<h1>Listing application text</h1>

<table> 
  <thead>
  <tr>
    <th>Description</th>
    <th>Text</th>
  </tr>
  </thead>
  <tbody>
<% @application_details.each do |application_detail| %>
  <tr class="<%= cycle("even","odd") %>">
    <td><%= application_detail.description %></td>
    <td><%= simple_format(sanitize(application_detail.the_text, :tags => %w(b strong i em br p a li ul), :attributes => %w(target href class))) %></td>
    <%#= link_to 'Show', application_detail %>
    <td><%= link_to 'Edit', edit_application_detail_path(application_detail) %></td>
    <%#= link_to 'Destroy', application_detail, :confirm => 'Are you sure?', :method => :delete %>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%#= link_to 'New application_detail', new_application_detail_path %>